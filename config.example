#!/usr/bin/env bash


# General details
study_name=""
analyst_name=""
analyst_email=""


# Please put the full path to this directory
# e.g. you can find this by using the pwd command in the terminal
home_directory="/panfs/panasas01/sscm/gh13047/sandpit/godmc/relateds"

# Input data files
betas="${home_directory}/input_data/data.RData"
bfile_raw="${home_directory}/input_data/data"
covariates="${home_directory}/input_data/covariates.txt"

# Cellcounts
# If you have purified cell types then set this to no
cellcounts_required="yes"

# Set this to the file name if you have measured or predicted cell counts already
# Otherwise leave it as NULL
provided_cellcounts="NULL"

# Are the samples unrelated? If so (even if there is possible cryptic relatedness) set this to "yes"
# If there are relationships in the data then set this to "no"
unrelated="no"

# Number of threads to use per node
nthreads="16"

# SNP filtering
# HWE threshold, minor allele frequency, SNP missingness, individual missingness
snp_hwe="1e-6"
snp_maf="0.01"
snp_miss="0.05"
snp_imiss="0.05"

# GRM parameters
rel_cutoff=0.125
grm_maf_cutoff=0.01

# PCA paramaters
n_pcs=20
pca_sd=3

# Matrixeqtl parameters
bfile_chunksize=10000
soft_threshold="1e-7"
soft_threshold_cnv="1e-7"



# DO NOT MODIFY
source ${home_directory}/parameters
